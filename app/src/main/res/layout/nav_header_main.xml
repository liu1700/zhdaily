<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <com.witkey.coder.zhdaily.customviews.CircularImageView
        android:layout_width="@dimen/nav_circle_image_size"
        android:layout_height="@dimen/nav_circle_image_size"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/avatar_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_toEndOf="@id/avatar_image"
        android:layout_toRightOf="@id/avatar_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <LinearLayout
        android:layout_below="@id/avatar_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/collection"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_grade_white_18dp"
            android:drawableLeft="@drawable/ic_grade_white_18dp"
            android:text="@string/nav_header_main_collection"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/watch"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_favorite_white_18dp"
            android:drawableStart="@drawable/ic_favorite_white_18dp"
            android:text="@string/nav_header_main_star"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

</RelativeLayout>
